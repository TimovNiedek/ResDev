<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background = "@color/greenish">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/greenish">
	    
	    <TextView
	        android:id="@+id/rvtextViewName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="75dp"
	        android:paddingLeft="16dp"
	        android:paddingRight="16dp"
	        android:text="Title"
	        android:textSize="24sp" />
	
	    <ScrollView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:layout_below="@+id/rvtextViewName">
	
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/rvimageViewMain"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:visibility="visible" />
	
	            <TextView
	                android:id="@+id/rvtextViewIngredients"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/rvimageViewMain"
	                android:layout_marginTop="24dp"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:text="Ingredient" />
	
	            <TextView
	                android:id="@+id/rvtextViewHowto"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/rvtextViewIngredients"
	                android:layout_marginTop="24dp"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:text="How to" />
	            
	            <TextView
	                android:id="@+id/rvtextViewTijd"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/rvtextViewHowto"
	                android:layout_marginTop="24dp"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:text="Time" />
	            
	            <TextView
	                android:id="@+id/rvtextViewPrijs"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/rvtextViewTijd"
	                android:layout_marginTop="24dp"
	                android:paddingLeft="16dp"
	                android:paddingRight="16dp"
	                android:text="Price" />
	
	            <Button
	                android:id="@+id/favouriteButton"
	                style="?android:attr/buttonStyleSmall"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/rvtextViewPrijs"
	                android:layout_marginBottom="16dp"
	                android:layout_marginLeft="16dp"
	                android:layout_marginRight="16dp" />
	
	        </RelativeLayout>
	    </ScrollView>
	
	</RelativeLayout>
</FrameLayout>